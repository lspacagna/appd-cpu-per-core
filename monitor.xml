<monitor>
    <name>CPU Per Core</name>
       <type>managed</type>
        <description>Monitors CPU per core.</description>
        <monitor-configuration>     </monitor-configuration>
        <monitor-run-task>
           <!--  Edit execution-style as needed. -->
           <execution-style>continuous</execution-style>
           <name>Run</name>
           <type>executable</type>
           <task-arguments></task-arguments>
            <executable-task>
                <type>file</type>
                <!--  Use only one file element per os-type. -->
                 <file os-type="windows">windows.bat</file>
           </executable-task>
         </monitor-run-task>
</monitor>
